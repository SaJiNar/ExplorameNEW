<resources>
    <!-- Estilo de la aplicación -->
    <style name="Theme.Exploramme" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Otros atributos del estilo de la aplicación -->
        ...
        <!-- Estilo de la barra de herramientas (TopBar) -->
        <item name="toolbarStyle">@style/TopBarStyle</item>
    </style>

    <!-- Estilo de la barra de herramientas (TopBar) -->
    <style name="TopBarStyle" parent="Widget.AppCompat.Toolbar">
        <item name="android:background">#457B9D</item>
        <item name="android:titleTextColor">#FFFFFF</item>
        <item name="titleTextAppearance">@style/TopBarTextStyle</item>
        <item name="titleMarginStart">16dp</item>
        <item name="titleMarginEnd">16dp</item>
    </style>

    <!-- Estilo del texto del título en la barra de herramientas (TopBar) -->
    <style name="TopBarTextStyle" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textStyle">bold</item>
    </style>
</resources>
